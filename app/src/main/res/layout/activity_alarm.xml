<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_appbar_al"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_back_al"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/tv_notice_al"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/iv_back_al"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_edit_al"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편집"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/line_al"
        app:layout_constraintTop_toBottomOf="@id/top_appbar_al"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/act_al"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="활동 알림"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/keyword_al"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/keyword_al"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="키워드 알림"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/act_al"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line_al"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_appbar_al"/>

<!--Scrollview만들기-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_1_layout_al"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_al">
        <androidx.cardview.widget.CardView
            android:id="@+id/ic_notice_al_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_icon_splash"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/tv_item_home_contents_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_notice_al_1"
            app:layout_constraintTop_toTopOf="@id/ic_notice_al_1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="노나니노나님,아직 당근마켓 새 이름을 모르시나요?👀"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로워진 당신 근처의 'OO'을 만나보세요"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/gray2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="4일전"
                android:textSize="13sp"
                android:TextType="bold"
                android:textColor="@color/gray"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Notice 2-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_2_layout_al"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_1_layout_al">
        <androidx.cardview.widget.CardView
            android:id="@+id/ic_notice_al_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_icon_splash"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/tv_item_home_contents_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_notice_al_2"
            app:layout_constraintTop_toTopOf="@id/ic_notice_al_2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나눔의 날 오늘의 소식 그리운 추억편🌃"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="노나니노나님께 소중한 나눔으로 추억을 꺼내어 준 사연 전해요♥"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/gray2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1주전"
                android:textSize="13sp"
                android:TextType="bold"
                android:textColor="@color/gray" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Notice 3-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_3_layout_al"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_2_layout_al">
        <androidx.cardview.widget.CardView
            android:id="@+id/ic_notice_al_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_icon_splash"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/tv_item_home_contents_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_notice_al_3"
            app:layout_constraintTop_toTopOf="@id/ic_notice_al_3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="지금 새로워진 '당근'을 만나보세요🥕"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="노나니노나님, 당근마켓의 새 이름 새 로고를 소개할게요!"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/gray2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="2주전"
                android:textSize="13sp"
                android:TextType="bold"
                android:textColor="@color/gray" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Notice 4-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_4_layout_al"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_3_layout_al">
        <androidx.cardview.widget.CardView
            android:id="@+id/ic_notice_al_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_icon_splash"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/tv_item_home_contents_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_notice_al_4"
            app:layout_constraintTop_toTopOf="@id/ic_notice_al_4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나눔의 날 오늘의 소식 장마철 장화편☂"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="17sp"/>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="노나니노나님께 소중한 나눔으로 뽀송한 장마철을 보낸 사연 전해요♥"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/gray2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="1달전"
                android:textSize="13sp"
                android:TextType="bold"
                android:textColor="@color/gray" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Notice 5-->







</androidx.constraintlayout.widget.ConstraintLayout>