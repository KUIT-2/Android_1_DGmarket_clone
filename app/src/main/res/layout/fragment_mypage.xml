<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--환경설정 기호삽입-->
        <ImageView
            android:id="@+id/mypageF_ic_mydaangn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_mydaangn_setting_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/iv_user_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#AAAAAA"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_9484_2"
                />


        </androidx.cardview.widget.CardView>







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/inter_bold"
            android:text="아름다운청춘의한장"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_user_profile_image"
            app:layout_constraintStart_toEndOf="@id/iv_user_profile_image"
            app:layout_constraintTop_toTopOf="@id/iv_user_profile_image" />

        <!--주황상자-->
        <TextView
            android:id="@+id/mypageF_view_profile"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/article_status_closed"
            app:layout_constraintBottom_toBottomOf="@id/iv_user_profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_user_profile_image" />
        <!--주황상자 속 글씨상자-->
        <TextView
            android:id="@+id/mypageF_btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_regular"
            android:text="프로필 보기"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_view_profile"
            app:layout_constraintEnd_toEndOf="@id/mypageF_view_profile"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_profile"
            app:layout_constraintTop_toTopOf="@id/mypageF_view_profile" />

        <!--프로필존 밑 회색 라운드 직사각형 시작-->
        <View
            android:id="@+id/mypageF_view_carrotpay"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rectangle31"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypageF_view_profile" />


        <!--당근마켓 주황색 로고 삽입-->
        <ImageView
            android:id="@+id/onboarding_"
            android:layout_width="56dp"
            android:layout_height="14dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/onboarding_logo1"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toTopOf="@id/mypageF_view_carrotpay" />

        <!--당근페이 문구 삽입-->
        <TextView
            android:id="@+id/paytext_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"

            android:fontFamily="@font/inter_regular"
            android:text="당근하는 새로운 방법, 당근페이!"
            android:textColor="@color/black"
            android:textSize="13sp"

            app:layout_constraintBottom_toBottomOf="@id/onboarding_"
            app:layout_constraintStart_toEndOf="@id/onboarding_"
            app:layout_constraintTop_toTopOf="@id/onboarding_" />

        <!--오른쪽 방향 화살표 기호 삽입-->
        <ImageView
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginEnd="19dp"

            android:src="@drawable/icon_post_article_more"
            app:layout_constraintBottom_toBottomOf="@id/onboarding_"
            app:layout_constraintEnd_toEndOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toTopOf="@id/onboarding_" />

        <!--충전버튼-->
        <View
            android:id="@+id/graybtn"
            android:layout_width="143dp"
            android:layout_height="33dp"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/grayrectangle_btn"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_view_carrotpay"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/tab_icon_write_gb_n"
            app:layout_constraintStart_toStartOf="@id/graybtn"
            app:layout_constraintTop_toTopOf="@id/graybtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/inter_bold"
            android:text="충전"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/graybtn" />

        <!--계좌송금 버튼-->
        <View
            android:id="@+id/graybtn2"
            android:layout_width="143dp"
            android:layout_height="33dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/grayrectangle_btn"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_view_carrotpay"
            app:layout_constraintEnd_toEndOf="@id/mypageF_view_carrotpay" />


        <ImageView
            android:id="@+id/icon2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/tab_icon_write_gb_n"
            app:layout_constraintStart_toStartOf="@id/graybtn2"
            app:layout_constraintTop_toTopOf="@id/graybtn2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/inter_bold"
            android:text="계좌송금"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/icon2"
            app:layout_constraintStart_toEndOf="@id/icon2"
            app:layout_constraintTop_toTopOf="@id/graybtn2" />

        <!--최근 방문-->
        <TextView
            android:id="@+id/visit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:text="최근 방문"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypageF_view_carrotpay" />

        <!--최근 방문 아래에 있는 객체들을 옆으로 넘기기 위한 가로스크롤-->
        <HorizontalScrollView
            android:id="@+id/mypageF_scroll_visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="@id/visit"
            app:layout_constraintTop_toBottomOf="@id/visit">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="34dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/rectangle33"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <ImageView
                        android:id="@+id/tab_icon_category_n"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/tab_icon_category_n"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/total_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/total_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="전체"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tab_icon_category_n"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/rectangle33"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="남성패션/잡화"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/rectangle33"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="여성의류"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/rectangle33"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="가구/인테리어"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


            </LinearLayout>
        </HorizontalScrollView>

        <!--나의거래-->
        <TextView
            android:id="@+id/my_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:text="나의 거래"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_scroll_visited" />

        <!--하트-->
        <ImageView
            android:id="@+id/ic_interest"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_feed_interest_outline_18"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/my_transaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="관심목록"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_interest"
            app:layout_constraintStart_toEndOf="@id/ic_interest"
            app:layout_constraintTop_toTopOf="@id/ic_interest" />

        <!--판매내역-->
        <ImageView
            android:id="@+id/ic_community"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginTop="67dp"
            android:src="@drawable/ic_community_outline_m"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/my_transaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="판매내역"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_community"
            app:layout_constraintStart_toEndOf="@id/ic_community"
            app:layout_constraintTop_toTopOf="@id/ic_community" />


        <!--구매내역-->
        <ImageView
            android:id="@+id/ic_voucher"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginTop="112dp"
            android:src="@drawable/ic_voucher_outline_m"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/my_transaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="구매내역"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_voucher"
            app:layout_constraintStart_toEndOf="@id/ic_voucher"
            app:layout_constraintTop_toTopOf="@id/ic_voucher" />

        <!--중고거래가계부-->
        <ImageView
            android:id="@+id/ic_favorite"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginTop="157dp"
            android:src="@drawable/btn_favorite_text_for_post"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/my_transaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="구매내역"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_favorite"
            app:layout_constraintStart_toEndOf="@id/ic_favorite"
            app:layout_constraintTop_toTopOf="@id/ic_favorite" />

        <!--line1-->
        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@id/my_transaction"
            android:background="#F3F3F5" />

        <!--나의동네생활-->
        <TextView
            android:id="@+id/my_donglife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="나의 동네생활"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/my_transaction"
            app:layout_constraintTop_toBottomOf="@id/line_1" />

        <ImageView
            android:id="@+id/ic_mydaangn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_mydaangn_storyarticle_outline_24"
            app:layout_constraintTop_toBottomOf="@id/my_donglife"
            app:layout_constraintStart_toStartOf="@id/my_donglife"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="동네생활 글/댓글"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/ic_mydaangn"
            app:layout_constraintStart_toEndOf="@id/ic_mydaangn"
            app:layout_constraintTop_toTopOf="@id/ic_mydaangn" />

        <!--line2-->
        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="82dp"
            app:layout_constraintTop_toBottomOf="@id/my_donglife"
            android:background="#F3F3F5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/inter_bold"
            android:text="동네 가게"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/line_2"
            app:layout_constraintStart_toStartOf="@id/my_donglife"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>