<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--프로필 정보-->
        <ImageView
            android:id="@+id/mypageF_ic_mydaangn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/ic_mydaangn_setting_outline_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mypageF_img_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:elevation="0dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_dog" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/inter_bold"
            android:outlineAmbientShadowColor="@color/black"
            android:text="@string/user_name"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_img_profile"
            app:layout_constraintStart_toEndOf="@id/mypageF_img_profile"
            app:layout_constraintTop_toTopOf="@id/mypageF_img_profile" />

        <View
            android:id="@+id/mypageF_view_profile"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_round_3dp_gray"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_img_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mypageF_img_profile">

        </View>

        <TextView
            android:id="@+id/mypageF_btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_regular"
            android:text="프로필 보기"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_view_profile"
            app:layout_constraintEnd_toEndOf="@id/mypageF_view_profile"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_profile"
            app:layout_constraintTop_toTopOf="@id/mypageF_view_profile" />

        <!--당근페이-->
        <View
            android:id="@+id/mypageF_view_carrotpay"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/view_round_line_3dp_transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypageF_img_profile" />

        <ImageView
            android:id="@+id/mypageF_img_carrotmarket"
            android:layout_width="56dp"
            android:layout_height="14dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/onboarding_logo"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toTopOf="@id/mypageF_view_carrotpay" />

        <TextView
            android:id="@+id/mypageF_tv_carrotpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/inter_regular"
            android:text="당근하는 새로운 방법, 당근페이!"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_img_carrotmarket"
            app:layout_constraintStart_toEndOf="@id/mypageF_img_carrotmarket"
            app:layout_constraintTop_toTopOf="@id/mypageF_img_carrotmarket" />

        <ImageView
            android:id="@+id/mypageF_btn_carrotpay_arrow"
            android:layout_width="9dp"
            android:layout_height="15dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/icon_post_article_more"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_img_carrotmarket"
            app:layout_constraintEnd_toEndOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toTopOf="@id/mypageF_img_carrotmarket" />

        <!--당근페이(충전 버튼)-->
        <View
            android:id="@+id/mypageF_btn_carrotpay_charge"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/btn_round_3dp_gray"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_view_carrotpay"
            app:layout_constraintEnd_toStartOf="@id/mypageF_btn_carrotpay_transfer"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_img_carrotmarket" />

        <LinearLayout
            android:id="@+id/mypageF_ll_carrotpay_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_btn_carrotpay_charge"
            app:layout_constraintEnd_toEndOf="@id/mypageF_btn_carrotpay_charge"
            app:layout_constraintStart_toStartOf="@id/mypageF_btn_carrotpay_charge"
            app:layout_constraintTop_toTopOf="@id/mypageF_btn_carrotpay_charge">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/tab_icon_write_gb_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="충전"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:translationZ="10dp" />

        </LinearLayout>

        <!--당근페이(계좌송금 버튼)-->
        <View
            android:id="@+id/mypageF_btn_carrotpay_transfer"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/btn_round_3dp_gray"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_btn_carrotpay_charge"
            app:layout_constraintEnd_toEndOf="@id/mypageF_view_carrotpay"
            app:layout_constraintStart_toEndOf="@id/mypageF_btn_carrotpay_charge"
            app:layout_constraintTop_toTopOf="@id/mypageF_btn_carrotpay_charge" />

        <LinearLayout
            android:id="@+id/mypageF_ll_carrotpay_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="@id/mypageF_btn_carrotpay_transfer"
            app:layout_constraintEnd_toEndOf="@id/mypageF_btn_carrotpay_transfer"
            app:layout_constraintStart_toStartOf="@id/mypageF_btn_carrotpay_transfer"
            app:layout_constraintTop_toTopOf="@id/mypageF_btn_carrotpay_transfer">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/tab_icon_write_gb_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="계좌송금"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:translationZ="10dp" />

        </LinearLayout>

        <!--최근 방문-->
        <TextView
            android:id="@+id/mypageF_tv_visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:text="최근 방문"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_view_carrotpay" />

        <HorizontalScrollView
            android:id="@+id/mypageF_scroll_visited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="@id/mypageF_tv_visited"
            app:layout_constraintTop_toBottomOf="@id/mypageF_tv_visited">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="34dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypageF_ll_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/btn_round_line_20dp_gray"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <ImageView
                        android:id="@+id/mypageF_img_all"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/tab_icon_category_n"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/mypageF_tv_all"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/mypageF_tv_all"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center"
                        android:text="@string/category_all"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/mypageF_img_all"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/btn_round_line_20dp_gray"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/category_man"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/btn_round_line_20dp_gray"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/category_woman"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/btn_round_line_20dp_gray"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/category_furniture"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/btn_round_line_20dp_gray"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/category_food"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/btn_round_line_20dp_gray"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/category_beauty"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/btn_round_line_20dp_gray"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/category_baby"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </HorizontalScrollView>

        <!--나의 거래-->
        <TextView
            android:id="@+id/mypageF_tv_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:text="나의 거래"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_scroll_visited" />

        <LinearLayout
            android:id="@+id/mypageF_ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_tv_transaction">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_feed_interest_outline_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="관심목록"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypageF_ll_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_ll_like">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_community_outline_m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="판매내역"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypageF_ll_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_ll_sell">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_voucher_outline_m" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="구매내역"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypageF_ll_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_ll_buy">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/btn_favorite_text_for_post" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="중고거래 가계부"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <!--line1-->
        <View
            android:id="@+id/mypageF_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="22dp"
            android:background="@color/gray_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypageF_ll_book" />

        <!--나의 동네생활-->
        <TextView
            android:id="@+id/mypageF_tv_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:text="나의 동네생활"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_line1" />

        <LinearLayout
            android:id="@+id/mypageF_ll_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_tv_community">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_mydaangn_storyarticle_outline_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="동네생활 글/댓글"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <!--line2-->
        <View
            android:id="@+id/mypageF_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="22dp"
            android:background="@color/gray_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypageF_ll_community" />

        <!--동네 가게-->
        <TextView
            android:id="@+id/mypageF_tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:text="동네 가게"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_line2" />

        <LinearLayout
            android:id="@+id/mypageF_ll_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_tv_store">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_mydaangn_storyreply_outline_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="동네 가게 후기"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <!--line3-->
        <View
            android:id="@+id/mypageF_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="22dp"
            android:background="@color/gray_300"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypageF_ll_store" />

        <!--나의 비즈니스-->
        <TextView
            android:id="@+id/mypageF_tv_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/inter_bold"
            android:text="동네 가게"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_line3" />

        <LinearLayout
            android:id="@+id/mypageF_ll_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_tv_business">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_mydaangn_ceo_outline_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="비즈프로필 관리"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypageF_ll_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/mypageF_view_carrotpay"
            app:layout_constraintTop_toBottomOf="@id/mypageF_ll_manage">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_mydaangn_notice_outline_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="광고"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>