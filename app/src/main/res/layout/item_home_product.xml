<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item1Layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/iv_item_home_thumbnail"
            android:layout_width="82dp"
            android:layout_height="69dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_item_home_thumbnail_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_best_s" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/tv_item_home_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_thumbnail"
            app:layout_constraintTop_toTopOf="@id/iv_item_home_thumbnail">


            <TextView
                android:id="@+id/tv_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="생귤탱귤 제주 감귤 판매합니다 🍊"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서귀포시 • 끌올 1분 전"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_price"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20,000원"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_home_comment_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/ll_item_home_like_1"
            app:layout_constraintEnd_toStartOf="@id/ll_item_home_like_1">


            <ImageView
                android:id="@+id/iv_item_home_comment"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/tab_icon_chat_n" />

            <TextView
                android:id="@+id/tv_item_home_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_home_like_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            >

            <ImageView
                android:id="@+id/iv_item_home_like"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:src="@drawable/icon_like_count" />

            <TextView
                android:id="@+id/tv_item_home_like_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1Layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
